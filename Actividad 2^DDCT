#Ejercicio 2DDCT

#install.packages("pacman") #es un paquete que llama a otros paquetes y si no estan los instala
library("pacman") #esta funci√≥n llama al paquete instalado

p_load("ggplot2","dplyr","vroom") #ggplot es para graficar, dplyr facilitar el manejo de datos y vroom llamar repositorios

Datos_PCR <- vroom(file="https://raw.githubusercontent.com/ManuelLaraMVZ/resultados_PCR_practica/refs/heads/main/Genes.csv")

Datos_PCR

Gen_ref <- Datos_PCR %>% 
  filter(Gen =="B-actina") %>% 
  select(-1)

Gen_ref

Gen_int <- Datos_PCR %>% 
  filter(Gen != "B-actina") %>% 
  select(-1)

Gen_int

DCT <- Gen_int %>% 
   mutate(DC1=C1-Gen_ref$C1,
          DC2=C2-Gen_ref$C2,
          DC3=C3-Gen_ref$C3,
          TC1=T1-Gen_ref$T1,
          TC2=T2-Gen_ref$T2,
          TC3=T3-Gen_ref$T3) %>% 
  select(-1:-6) %>% 
